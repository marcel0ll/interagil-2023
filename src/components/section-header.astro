---
export interface Props {
	headline: string;
  title: string;
	subtitle: string;
}

const { headline, title, subtitle } = Astro.props;
---

<div>
  <p class="text-base font-semibold leading-7 text-primary-400">
    {headline}
  </p>
  <h1
    class="my-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
  >
    {title}
  </h1>
  <h2 class="text-xl mb-6 text-gray-600">
    {subtitle}
  </h2>
  <slot />
</div>
